# ═══════════════════════════════════════════════════════════════════════════════
# ملف المتغيرات البيئية لمشروع mkh_Manus
# انسخ هذا الملف إلى .env وعدّل القيم حسب بيئتك
# ═══════════════════════════════════════════════════════════════════════════════

# ═══ Security & Encryption ═══
# مفتاح التشفير Fernet (يجب توليده باستخدام: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your_fernet_key_here

# مفتاح JWT للمصادقة (يجب توليده باستخدام: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# وضع المسؤول التلقائي (true/false)
AUTO_ADMIN_MODE=false

# رمز المسؤول (اختياري)
ADMIN_TOKEN=your_admin_token_here

# ═══ PostgreSQL Database ═══
POSTGRES_DB=mkh_manus
POSTGRES_USER=mkh_user
POSTGRES_PASSWORD=mkh_secure_password_2025
POSTGRES_PORT=5432
DATABASE_URL=postgresql://mkh_user:mkh_secure_password_2025@postgres:5432/mkh_manus

# ═══ Redis ═══
REDIS_PASSWORD=mkh_redis_pass_2025
REDIS_PORT=6379
REDIS_URL=redis://:mkh_redis_pass_2025@redis:6379/0

# ═══ Celery ═══
CELERY_BROKER_URL=redis://:mkh_redis_pass_2025@redis:6379/0
CELERY_RESULT_BACKEND=redis://:mkh_redis_pass_2025@redis:6379/1

# ═══ MinIO Object Storage ═══
MINIO_ROOT_USER=mkh_minio_admin
MINIO_ROOT_PASSWORD=mkh_minio_secure_2025
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=mkh_minio_admin
MINIO_SECRET_KEY=mkh_minio_secure_2025
MINIO_BUCKET=mkh-attachments
MINIO_SECURE=false

# ═══ API Service ═══
API_PORT=8000

# ═══ Flower (Celery Monitoring) ═══
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=flower_admin_2025

# ═══ Monitoring & Logging ═══
SENTRY_DSN=
ENVIRONMENT=production

# ═══ OAuth Connectors ═══
# Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/connectors/google/oauth/callback

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/v1/connectors/facebook/oauth/callback

# Microsoft
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/v1/connectors/microsoft/oauth/callback

# GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/connectors/github/oauth/callback

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/v1/connectors/linkedin/oauth/callback

# Discord
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:8000/api/v1/connectors/discord/oauth/callback

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ═══ Rate Limiting ═══
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ═══ CORS ═══
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ═══ Vault (Optional - for production) ═══
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your_vault_token
VAULT_NAMESPACE=mkh_manus
